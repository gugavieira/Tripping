<% content_for :body_class, '' %>
<%= render 'shared/header' %>
<div id="photos_container">
	<div id="photos_header">
	    <h2><%= @title %></h2>
      <ul id="photos_menu">
        <li>
          <a href="" class="share_icons">Share</a>
          <div id="share_panel"><%= render :partial => 'share_panel'%></div>
        </li>
        <li>
          <%= link_to "Slideshow", slideshow_photoset_path(params[:id]), :class=> "slideshow_link" %>
        </li>
      </ul>
	</div>
	<%= render :partial => 'photo', :collection => @photos %>
</div>
<%= will_paginate @photos %>
<script>
  $('#photos_container').infinitescroll({
 
    navSelector  : "div.pagination",            
                   // selector for the paged navigation (it will be hidden)
    nextSelector : "div.pagination a.next_page",    
                   // selector for the NEXT link (to page 2)
    itemSelector : "#photos_container div.photo",          
                   // selector for all items you'll retrieve
    loadingText  : "Hang on, loading more photos...",      
                 // text accompanying loading image
                 // default: "<em>Loading the next set of posts...</em>"
    donetext     : "I think we've hit the end, Jim"
                 // text displayed when all items have been retrieved
                 // default: "<em>Congratulations, you've reached the end of the internet.</em>"
  });
</script>